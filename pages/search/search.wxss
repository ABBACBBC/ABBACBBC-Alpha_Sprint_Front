page{
  background-color: rgb(240, 240, 240) ;
}
.search-bar {
  position: relative;
  padding: 8px 10px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  box-sizing: border-box;
  background-color: #EFEFF4;
  border-top: 1rpx solid #D7D6DC;
  border-bottom: 1rpx solid #D7D6DC;
}
.icon-search {
  margin-right: 4px;
  font-size: inherit;
  line-height: 50px;
}
.icon-search_in-box {
  position: absolute;
  left: 10px;
  top: 7px;
  line-height: 50px;
}
.search-bar__text {
  display: inline-block;
  font-size: 20px;
  line-height: 50px;
}
.search-bar__form {
  position: relative;
  -webkit-box-flex: 1;
  -webkit-flex: auto;
          flex: auto;
  border-radius: 5px;
  background: #FFFFFF;
  border: 1rpx solid #E6E6EA;
}
.search-bar__box {
  position: relative;
  padding-left: 30px;
  padding-right: 30px;
  width: 100%;
  box-sizing: border-box;
  z-index: 1;
}
.search-bar__input {
  height: 50px;
  line-height: 40px;
  font-size: 20px;
}
.search-bar__label {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 2;
  border-radius: 3px;
  text-align: center;
  color: #9B9B9B;
  background: #FFFFFF;
  line-height: 50px;
}
.search-bar__cancel-btn {
  margin-left: 10px;
  line-height: 50px;
  color: #09BB07;
  white-space: nowrap;
}
.keyword-search{
  margin-top: 25px;
  margin-left: 7px;
  font-size: 20px;
}
.keyword-lab{
  margin-top: 6px;
  margin-left: 7px;
  font-size: 15px;
}